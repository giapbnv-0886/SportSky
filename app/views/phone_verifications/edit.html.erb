<div class="row">
  <div class="col-md-6">
    <h3><%= t "users.verify.header" %></h3>
    <%= form_for :verify, url:phone_verifications_path, method: :patch do |f| %>
      <div class="form-group">
        <%= f.label t("users.verify.pin_label") %>
        <%= f.text_field :pin, html_options = { "class": "form-control" } %>
        <%= f.submit t("users.verify.submit"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
